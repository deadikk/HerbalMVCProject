@using System.Web.Optimization;

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
    <link href="~/Content/Site2.min.css" rel="stylesheet" />
    <script src="~/Scripts/script.js"></script>
    <link rel="shortcut icon" type="image/png" href="~/Content/favicon.png"/>
    <link rel="icon" type="image/png" href="~/Content/favicon.png" />
    @RenderSection("SearchEngine", false)
</head>
<body>
    <div id="globalDiv">

        <div id="headerDiv">
            <span>herbal-info.ru  </span><span>Онлайн справочник лекарственных растений</span>
        </div>

        <div id="searchDiv">
            @Html.Partial("_SearchLetters")
            @Html.Partial("_searchBlock")
        </div>

        <div id="mainPageDiv">


            <div id="contentDiv">
                @RenderSection("Body")
            </div>


        </div>

        
    </div>
    
</body>
</html>
