@model List<string>

@{
    ViewBag.Title = "Растения на букву \"" + @Model[0][0]+"\"";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int columns = 4;

    int itemsInColumns = (@Model.Count % columns) == 0 ? (@Model.Count / columns) : (@Model.Count / columns + (@Model.Count % columns));

}
@section Body{
    <div id="textSearchResultList">
        <h1 class="latinHeader">Растения на букву "@Model[0][0]"</h1>
        @for (int i = 0; i < columns; i++)
        {
            <div class="searchListColumn">
                @for (int j = itemsInColumns * i; j < itemsInColumns * i + itemsInColumns; j++)
                {
                    if (@Model.Count > j)
                    {
                        @Html.ActionLink(@Model[j], "Index", "Herb", "http", null, null, new { name = @Model[j].Replace(' ', '_').Replace('.', '!') }, null)
                    }

                }
            </div>

        }


    </div>
}