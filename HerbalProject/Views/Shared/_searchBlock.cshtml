<div id="searchBlock">
    <script>

        function searchByName() {
            var value = document.getElementById('s').value;
            window.location = "/SearchByNames/" + value;
        };

        function SearchBySickness() {
            var val = document.getElementById('r').value;
            window.location = "/SearchBySickness/" + val;
        };

        function searchKeyPress(e) {
            // look for window.event in case event isn't passed in
            e = e || window.event;
            if (e.keyCode == 13) {
                searchByName();
                return false;
            }
            return true;
        }
        function searchReceipKeyPress(e) {
            // look for window.event in case event isn't passed in
            e = e || window.event;
            if (e.keyCode == 13) {
                SearchBySickness();
                return false;
            }
            return true;
        }

    </script>

    <input type="text" id="s" name="s" onclick="value = '';" ,  value="Поиск по названию" onkeypress="return searchKeyPress(event);" />
    <button id="nameSearchSubmit" title="Поиск по названию" onclick="searchByName();" class="sButton">Search</button>


    <input type="text" id="r" name="r" onclick="value = '';" , value="Поиск по болезням" onkeypress="return searchReceipKeyPress(event);" />
    <button id="SicknessSearchSubmit" title="Поиск по болезням" onclick="SearchBySickness();" class="srButton">Search</button>

    
    
</div>